<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Row: Location Text and Fetch Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp">

            <!-- TextView to display location -->
            <TextView
                android:id="@+id/locationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fetching location..."
                android:textColor="#333333"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingEnd="8dp" />

            <!-- Button to fetch location -->
            <Button
                android:id="@+id/fetchLocationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fetch"
                android:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="0dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Interactive Boxes Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="16dp">

            <!-- ATM Box -->
            <LinearLayout
                android:id="@+id/atmBox"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="#DFF6FF"
                android:padding="24dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ATMs Nearby"
                    android:textColor="#007BFF"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Pharmacies Box -->
            <LinearLayout
                android:id="@+id/pharmaciesBox"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="#FFF5E6"
                android:padding="24dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pharmacies Nearby"
                    android:textColor="#FF8500"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Hotels Box -->
            <LinearLayout
                android:id="@+id/hotelBox"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="#E6F7E6"
                android:padding="24dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotels Nearby"
                    android:textColor="#3AB54A"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Restaurants Box -->
            <LinearLayout
                android:id="@+id/restaurantsBox"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="#FFF1F0"
                android:padding="24dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurants Nearby"
                    android:textColor="#F44336"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
