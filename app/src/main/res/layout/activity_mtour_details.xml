                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="â‚¹20,000"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#D81B60"
                android:textStyle="bold" />


